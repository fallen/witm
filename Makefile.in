NAME = witm
CFLAGS += -Wall -Wextra -g -O0 -L. -I. `pcap-config --cflags` `dnet-config --cflags` -DDNET_NAME=\<$(DNET_NAME)\>
LDLIBS += `pcap-config --libs` `dnet-config --libs` -lpthread -ldl

SRC = $(NAME).c got_packet.c forward.c protocols/arp.c poisoning.c plugins.c protocols/ip.c protocols/tcp.c protocols/icmp.c protocols/http.c
OBJ = $(SRC:.c=.o)

all: $(NAME)

$(NAME): $(OBJ)

$(OBJ): $(NAME).h

clean:
	rm -f $(OBJ)

distclean: clean
	rm -f $(NAME)

re: distclean all
